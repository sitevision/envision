---
import { getGithubUrl } from '../utils/utils.ts';
const { frontmatter } = Astro.props;
const gitHubAddress = getGithubUrl(frontmatter.file);
---

{
   gitHubAddress && (
      <div class="doc-md-link">
         <a
            href={gitHubAddress}
            target="_blank"
            rel="noopener noreferrer"
            class="env-button env-button--primary env-button--ghost env-button--icon env-button--icon-before doc-md-link__button"
         >
            <svg
               class="env-icon doc-md-link__icon"
               viewBox="0 0 48 48"
               aria-hidden="true"
            >
               <>
                  <g clip-path="url(#a)">
                     <path d="M44.528 5.998H3.466c-1.915 0-3.469 1.63-3.469 3.635v28.726c0 2.006 1.554 3.639 3.469 3.639h41.062c1.91 0 3.468-1.633 3.468-3.639V9.633c0-2.006-1.554-3.635-3.468-3.635Zm-17.531 28.5h-6v-10.5l-4.5 6-4.5-6v10.5h-6v-21h6l4.5 7.5 4.5-7.5h6v21Zm9 0-7.5-10.5H33l-.004-10.5h6v10.5h4.5l-7.5 10.5Z" />
                  </g>
                  <defs>
                     <clipPath id="a">
                        <path d="M-.003-.002h47.999v47.999H-.003z" />
                     </clipPath>
                  </defs>
               </>
            </svg>
            <span class="doc-md-link__button__text">
               View this page as Markdown
            </span>
         </a>
      </div>
   )
}
